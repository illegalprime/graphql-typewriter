  "bugs": {
    "url": "https://github.com/nknapp/graphql-typewriter/issues"
  },
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --noUnusedLocals",
    "tslint": "tslint -e '**/*.d.ts' -e 'node_modules/**' '**/*.ts'",
