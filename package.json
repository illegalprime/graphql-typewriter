  "devDependencies": {
    "@types/chai": "^4.0.2",
    "@types/commander": "^2.9.1",
    "@types/glob": "^5.0.30",
    "@types/graphql": "^0.10.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.19",
    "chai": "^4.1.1",
    "mocha": "^3.5.0",
    "thoughtful-release": "^0.3.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "tslint-config-standard": "^6.0.1",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.4.2"
